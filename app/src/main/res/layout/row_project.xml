<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/row_drop_padding">

    <!--android:background="@drawable/bg_row_drop"-->

    <TextView
        android:id="@+id/tv_project_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="@dimen/tv_proj_title_horizontal_padding"
        android:paddingRight="@dimen/tv_proj_title_horizontal_padding" />

    <TextView
        android:id="@+id/tv_bids_due"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="@dimen/tv_proj_title_horizontal_padding"
        android:paddingRight="@dimen/tv_proj_title_horizontal_padding"
        android:text="bidsDue"/>

    <!--
    <TextView
        android:id="@+id/tv_when"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    -->

</LinearLayout>